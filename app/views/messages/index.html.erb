<div class="container">
    <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading"><h3>Messages</h3></div>
          <div class="panel-body">
            <div class="container">
              <%= sync partial: 'message_row', collection: @messages %>
              <%= sync_new partial: 'message_row', resource: Message.new %>
            </div>
            <div class="panel-footer">
                 <div class="input-group">
                   <%= form_for @new_message, remote: true do |f| %>
                     say  <%= f.text_field :body %>
                   <% end %>
                </div>
            </div>
          </div>
        </div>
    </div>
</div>
