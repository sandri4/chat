<div align="center">
  <div class="col-xs-offset-4 col-xs-4">
    <h2 class="page-header">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="field">
          <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
        </div>

        <div class="field">
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'Name' %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Surname' %>
        </div>

        <div class="field">
          <%= f.date_field :birthday, class: 'form-control', placeholder: 'Birthday' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password Confirmation' %>
        </div>
        <div>
          <div class="full-width">
            <input type="file" id="base-input" class="form-control form-input form-style-base"<%= f.file_field :avatar %>
            <input type="text" id="fake-input" class="form-control form-input form-style-fake" placeholder="Avatar" readonly>
            <span class="glyphicon glyphicon-open input-place"></span>
          </div>
        </div>
        <div>
          <div class="full-width">
            <input type="file" id="base-input" class="form-control form-input form-style-base"<%= f.file_field :background_image %>
            <input type="text" id="fake-input" class="form-control form-input form-style-fake" placeholder="Background" readonly>
            <span class="glyphicon glyphicon-open input-place"></span>
          </div>
        </div>


        <div class="actions">
          <p><%= f.submit "Sign up", class: 'btn btn-success' %></p>
        </div>
        </div>
        <div>
    <% end %>
    </div>
    </div>
</div>
